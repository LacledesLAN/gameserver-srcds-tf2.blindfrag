    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "docker pull lacledeslan/gamesvr-tf2; docker build . -f Dockerfile.linux -t ll/gamesvr-tf2-blindfrag --no-cache --build-arg BUILDNODE=$env:computername;",
            "dependsOn": "download-sub-modules",
            "group": "build",
            "identifier": "build-image",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm ll/gamesvr-tf2-blindfrag ./ll-tests/gamesvr-tf2-blindfrag.sh;",
            "dependsOn": "build-image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host ll/gamesvr-tf2-blindfrag docker run -it --rm --net=host ll/gamesvr-tf2-blindfrag ./srcds_run -game tf -usercon +map koth_harvest_final +maplist mapcycle_quickplay_koth +rcon_password \"test123\"",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm ll/gamesvr-tf2-blindfrag;",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Download git submodules",
            "type": "shell",
            "command": "git submodule foreach git pull origin master;",
            "identifier": "download-sub-modules",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Update git submodules",
            "type": "shell",
            "command": "git submodule update --recursive --remote;",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}

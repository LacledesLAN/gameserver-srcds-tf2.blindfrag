{
    "cSpell.words": [
        "blindfrag",
        "DOCKERHUB",
        "Dockerized",
        "freeplay",
        "gamesvr",
        "koth",
        "laclede",
        "laclede's",
        "lacledeâ€™s",
        "lacledeslan",
        "mapcycle",
        "maplist",
        "quickplay",
        "rcon",
        "sourcemod",
        "srcds",
        "steamcmd",
        "usercon"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "markdownlint.ignore": [
        ".gitkeep", "LICENSE"
    ],
    "shellcheck.exclude": ["1091"],
    "[markdown]": {
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
        "editor.rulers": [120],
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.wordWrap": "on"
    },
    "[shellscript]": {
        "editor.rulers": [100],
        "files.eol": "\n"
    }
}
